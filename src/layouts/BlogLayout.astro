---
import { twMerge } from "tailwind-merge";
import Layout from "./Layout.astro";
import GoToTop from "../components/GoToTop.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    minimal?: boolean;
    class?: string;
  };
}

let { frontmatter } = Astro.props;

frontmatter = {
  ...frontmatter,
  minimal: frontmatter.minimal === undefined ? true : frontmatter.minimal,
};
---

<Layout {...frontmatter}>
  <Breadcrumbs current={frontmatter.title} />
  <article class={twMerge("mx-auto [&>div]:my-8", frontmatter.class)}>
    <slot />
  </article>
  <GoToTop />
</Layout>
