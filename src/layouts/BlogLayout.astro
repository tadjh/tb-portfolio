---
import { twMerge } from "tailwind-merge";
import Layout from "./Layout.astro";
import GoToTop from "../components/GoToTop.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    minimal?: boolean;
    class?: string;
  };
  children: any;
}

let { frontmatter } = Astro.props;

frontmatter = {
  ...frontmatter,
  minimal: frontmatter.minimal === undefined ? true : frontmatter.minimal,
};
---

<Layout {...frontmatter}>
  <article class={twMerge("[&>div]:my-8", frontmatter.class)}>
    <slot />
  </article>
  <GoToTop />
</Layout>
