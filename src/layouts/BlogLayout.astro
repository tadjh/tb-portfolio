---
import { twMerge } from "tailwind-merge";
import Layout from "./Layout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";

interface Props {
  frontmatter: {
    title: string;
    description: string;
    class?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout {...frontmatter} minimal={true}>
  <Breadcrumbs current={frontmatter.title} />
  <article class={twMerge("mx-auto [&>div]:my-8", frontmatter.class)}>
    <slot />
  </article>
</Layout>
