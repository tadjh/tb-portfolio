---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import type { Props as SiteTitleProps } from "../components/SiteTitle.astro";

export interface Props extends SiteTitleProps {
  title?: string;
  description?: string;
  minimal?: boolean;
  children: any;
}

const { title, description, minimal, level } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="m-0 flex min-h-full flex-col items-center gap-y-8 p-0 text-neutral-700 dark:bg-neutral-900 dark:text-neutral-300"
  >
    <Header level={level} />
    <main
      id="main"
      class="mx-auto flex w-full max-w-5xl flex-1 flex-col gap-y-4 p-4 md:gap-y-8 md:p-8"
    >
      <slot />
    </main>
    <Footer minimal={minimal} />
  </body>
</html>
