---
interface Props {
  date: Date | string;
}

let { date } = Astro.props;

date = typeof date === "string" ? new Date(date) : date;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
