---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"video"> {
  class: string;
  media: Promise<{ default: string }>;
}

const { media, ...props } = Astro.props;
const videoData = await media;
// TODO Handle client:visible
---

<video {...props}>
  <source src={videoData.default} type="video/mp4" />
</video>
