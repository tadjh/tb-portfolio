---
import { twMerge } from "tailwind-merge";

interface Props {
  primary?: boolean;
  children: any;
}
const { primary = false, ...props } = Astro.props;
---

<div
  class={twMerge(
    "text-nowrap rounded-lg px-2 text-sm md:text-base",
    primary
      ? "bg-orange-tadjhDark font-display font-bold uppercase text-white"
      : "border border-neutral-300 bg-neutral-200 text-neutral-900 transition-colors hover:bg-neutral-300 dark:border-neutral-700 dark:bg-neutral-800 dark:text-white dark:hover:bg-neutral-700",
  )}
  {...props}
>
  <slot />
</div>
